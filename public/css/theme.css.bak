@import url("https://fonts.googleapis.com/css2?family=Pacifico&family=Ubuntu:wght@300;400;500&display=swap");

body, html {
  background: linear-gradient(to bottom, #9a0606, #2807dea7);
  height: 100vh;
  overflow: auto;
}

.navbar {
  background-image: linear-gradient(145deg, #a20c0c, #0c2de995);
  box-shadow: 1px 1px 5px 2px rgba(0, 0, 0, 0.3);
}

.nav-item a {
  color: #000000 !important;
  font-family: "Ubuntu", sans-serif;
  font-size: 18px;
}

.nav-item a:hover {
  color: #000 !important;
}

.navbar-brand {
  color: #050000 !important;
  font-family: "Pacifico", cursive;
  font-size: 24px;
}

.active {
  font-weight: bold;
}

.h3 {
  font-family: "Pacifico", cursive;
  opacity: 0.7;
  text-decoration: underline;
  color: #050505;
  padding-top: 30px;
}

.submit-btn {
  padding: 6px 20px;
  background-image: linear-gradient(145deg, #ea0404, #082bf1);
  outline: none;
  border: 0;
  box-shadow: 1px 1px 5px 2px rgba(0, 0, 0, 0.3);
  font-weight: 500;
}

.submit-btn:hover {
  background-image: linear-gradient(145deg, #f90b0b, #ec0303);
}

.overview-links {
  color: #f30808;
}


/* Style for the form container */
.form-container {
  margin: 0 auto;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

/* Style for form headings */
.form-container h2 {
  margin-bottom: 20px;
  text-align: center;
}

/* Style for form labels */
.form-group label {
  display: block;
  font-weight: bold;
}

/* Style for input fields */
.form-group input {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

/* Style for the Add Course button */
.btn-primary {
  background-color: #007bff;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.btn-primary:hover {
  background-color: #0056b3;
}
